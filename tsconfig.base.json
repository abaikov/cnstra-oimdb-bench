    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bench/core": ["packages/core/src/index.ts"],
      "@bench/adapter-placeholder": ["packages/adapters/placeholder/src/index.ts"],
      "@bench/adapter-cnstra-react": ["packages/adapters/cnstra-react/src/index.ts"],
      "@bench/adapter-oimdb-react": ["packages/adapters/oimdb-react/src/index.ts"],
      "@bench/adapter-cnstra-oimdb": ["packages/adapters/cnstra-oimdb/src/index.tsx"],
      "@bench/adapter-redux": ["packages/adapters/redux/src/index.tsx"],
      "@bench/adapter-effector": ["packages/adapters/effector/src/index.tsx"],
      "@bench/adapter-zustand": ["packages/adapters/zustand/src/index.ts"]
    }
  }
}
